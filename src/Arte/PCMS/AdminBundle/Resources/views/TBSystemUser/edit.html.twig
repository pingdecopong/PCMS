{% extends 'ArtePCMSAdminBundle::layout.html.twig' %}

{% form_theme form 'pingdecopongFormFreezeBundle:Form:form_layout.html.twig' %}

{% block body -%}
    <header>
        <h1>TBSystemUser 編集</h1>
    </header>
    <section class="section">
        <h1 class="caption"><span id="selectFolderName">TBSystemUser 編集</span></h1>
        <div class="functionListArea">
            <ul class="functionList clearfix">
                <li class="home"><a href="{{ path('systemuser') }}?{{ returnUrlParam|raw }}">一覧へもどる</a></li>
            </ul>
        </div>
        <form action="{{ path('systemuser_edit', { 'id': entity.id }) }}" method="post" {{ form_enctype(form) }} name="systemuser_edit_form">

            <div class="error_validation">
                {{ form_errors(form) }}
            </div>

            <table width="600" border="0" cellpadding="0" cellspacing="0" class="detailTable">
                <tr>
                    <th scope="row">{{ form_label(form.TBSystemUser.LoginId) }}</th>
                    <td>
                        <div class="error_validation_inline">
                            {{ form_errors(form.TBSystemUser.LoginId) }}
                        </div>
                        {{ form_widget(form.TBSystemUser.LoginId) }}
                        <br/>
                        <span class="input_notes">{{ form.TBSystemUser.LoginId.vars.name }}</span>
                    </td>
                </tr>
                <tr>
                    <th scope="row">{{ form_label(form.TBSystemUser.DisplayName) }}</th>
                    <td>
                        <div class="error_validation_inline">
                            {{ form_errors(form.TBSystemUser.DisplayName) }}
                        </div>
                        {{ form_widget(form.TBSystemUser.DisplayName) }}
                        <br/>
                        <span class="input_notes">{{ form.TBSystemUser.DisplayName.vars.name }}</span>
                    </td>
                </tr>
                <tr>
                    <th scope="row">{{ form_label(form.TBSystemUser.DisplayNameKana) }}</th>
                    <td>
                        <div class="error_validation_inline">
                            {{ form_errors(form.TBSystemUser.DisplayNameKana) }}
                        </div>
                        {{ form_widget(form.TBSystemUser.DisplayNameKana) }}
                        <br/>
                        <span class="input_notes">{{ form.TBSystemUser.DisplayNameKana.vars.name }}</span>
                    </td>
                </tr>
                <tr>
                    <th scope="row">{{ form_label(form.TBSystemUser.NickName) }}</th>
                    <td>
                        <div class="error_validation_inline">
                            {{ form_errors(form.TBSystemUser.NickName) }}
                        </div>
                        {{ form_widget(form.TBSystemUser.NickName) }}
                        <br/>
                        <span class="input_notes">{{ form.TBSystemUser.NickName.vars.name }}</span>
                    </td>
                </tr>

                <tr>
                    <th scope="row">{{ form_label(form.TBSystemUser.TBDepartmentDepartmentId) }}</th>
                    <td>
                        <div class="error_validation_inline">
                            {{ form_errors(form.TBSystemUser.TBDepartmentDepartmentId) }}
                        </div>
                        {{ form_widget(form.TBSystemUser.TBDepartmentDepartmentId) }}
                        <br/>
                        <span class="input_notes">{{ form.TBSystemUser.TBDepartmentDepartmentId.vars.name }}</span>
                    </td>
                </tr>

                <tr>
                    <th scope="row">{{ form_label(form.TBSystemUser.MailAddress) }}</th>
                    <td>
                        <div class="error_validation_inline">
                            {{ form_errors(form.TBSystemUser.MailAddress) }}
                        </div>
                        {{ form_widget(form.TBSystemUser.MailAddress) }}
                        <br/>
                        <span class="input_notes">{{ form.TBSystemUser.MailAddress.vars.name }}</span>
                    </td>
                </tr>

                <tr>
                    <th scope="row">{{ form_label(form.TBSystemUser.SystemRoleId) }}</th>
                    <td>
                        <div class="error_validation_inline">
                            {{ form_errors(form.TBSystemUser.SystemRoleId) }}
                        </div>
                        {{ form_widget(form.TBSystemUser.SystemRoleId) }}
                        <br/>
                        <span class="input_notes">{{ form.TBSystemUser.SystemRoleId.vars.name }}</span>
                    </td>
                </tr>

                <tr>
                    <th scope="row">{{ form_label(form.TBSystemUser.Active) }}</th>
                    <td>
                        <div class="error_validation_inline">
                            {{ form_errors(form.TBSystemUser.Active) }}
                        </div>
                        {{ form_widget(form.TBSystemUser.Active) }}
                        <br/>
                        <span class="input_notes">{{ form.TBSystemUser.Active.vars.name }}</span>
                    </td>
                </tr>
            </table>
            <div class="submit_box">
                {% if mode == 'input' %}
                <input type="button" onclick="postConfirm()" value="確認" style="width:100px;"/>
                {% elseif mode == 'confirm' %}
                <input type="button" onclick="postBack()" value="戻る"/>
                <input type="button" onclick="postSubmit()" value="登録" style="width:100px;"/>
                {% endif %}
            </div>

            {{ form_widget(form.subform.buttonAction) }}
            {{ form_widget(form.subform.returnAddress) }}

        {{ form_end(form) }}

    </section>

{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        //<![CDATA[
        function postConfirm(){
            document.systemuser_edit_form["{{ form.subform.buttonAction.vars.full_name }}"].value = "confirm";
            document.systemuser_edit_form.submit();
        }
        function postSubmit(){
            document.systemuser_edit_form["{{ form.subform.buttonAction.vars.full_name }}"].value = "submit";
            document.systemuser_edit_form.submit();
        }
        function postBack(){
            document.systemuser_edit_form["{{ form.subform.buttonAction.vars.full_name }}"].value = "";
            document.systemuser_edit_form.submit();
        }
        //]]>
    </script>
{% endblock %}
